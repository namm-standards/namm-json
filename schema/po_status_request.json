{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://standards.namm.org/schema/2020.1/po_status_request.json",
    "type": "object",
    "title": "NAMM_POStatusRequest",
    "additionalProperties": false,
    "properties": {
        "Version": {
            "$ref": "https://standards.namm.org/schema/2020.1/common.json#/definitions/Version"
        },
        "Id": {
            "type": "string",
            "description": "Document ID"
        },
        "Timestamp": {
            "type": "string",
            "description": "Document Time stamp",
            "format": "date-time"
        },
        "Supplier": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "PartyId": {
                    "type": "string"
                },
                "PartyIdType": {
                    "type": "string",
                    "enum": [
                        "GLN",
                        "NAMM"
                    ]
                }
            },
            "required": [
                "PartyId"
            ]
        },
        "SoldTo": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "PartyId": {
                    "type": "string"
                },
                "PartyIdType": {
                    "type": "string",
                    "enum": [
                        "GLN",
                        "NAMM"
                    ]
                }
            },
            "required": [
                "PartyId"
            ]
        },
        "BuyerOrderIds": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": []
}